<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Ação</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= link_to contact_path(contact), class: "btn btn-primary" do %><i class="glyphicon glyphicon-eye-open"></i><% end %></td>
        <td><%= link_to edit_contact_path(contact), class: "btn btn-warning" do %><i class="glyphicon glyphicon-pencil"></i><% end %></td>
        <td><%= link_to contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %><i class="glyphicon glyphicon-trash"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path, class: 'btn btn-primary' %>
